{
  "name": "your-gym",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://yourgymstaticsite.onrender.com",
  "dependencies": {
    "classnames": "^2.3.1",
    "date-fns-tz": "^3.2.0",
    "idb-keyval": "^6.2.2",
    "jsonschema": "^1.4.0",
    "lodash": "^4.17.21",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "6",
    "react-transition-group": "^4.4.5",
    "recharts": "^3.6.0",
    "sass": "^1.49.9",
    "url": "^0.11.0",
    "uuid": "^8.3.2",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.21",
    "@types/node": "^22.15.21",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-transition-group": "^4.4.12",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "husky": "^7.0.4",
    "typescript": "^4.9.5",
    "typescript-eslint": "^8.50.0",
    "vite": "^5.4.21",
    "vite-plugin-svgr": "^4.5.0"
  },
  "scripts": {
    "prepare": "cd .. && husky install client/.husky",
    "start": "git add .husky/pre-commit && vite",
    "dev": "vite",
    "build": "npm run ts-check && vite build",
    "preview": "vite preview",
    "test": "echo \"No tests configured. Use Vitest or Jest.\" && exit 0",
    "ts-check": "tsc --noEmit",
    "lint:fix": "eslint --fix --ext .ts,.tsx ./src",
    "safe-check": "./scripts/safe-check.sh",
    "pre-commit-hook": "npm run safe-check && npm run lint:fix",
    "predeploy": "npm run build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "indent": [
        "warn",
        2
      ],
      "eol-last": [
        "warn",
        "always"
      ],
      "quotes": [
        "warn",
        "single",
        {
          "allowTemplateLiterals": true
        }
      ],
      "max-len": [
        "warn",
        {
          "code": 80,
          "tabWidth": 2
        }
      ],
      "comma-dangle": [
        "warn",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "functions": "always-multiline"
        }
      ],
      "semi": [
        "warn",
        "always"
      ],
      "no-unused-vars": [
        "warn",
        {
          "vars": "all",
          "args": "after-used",
          "ignoreRestSiblings": false
        }
      ],
      "no-trailing-spaces": "warn"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
