{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start DB",
      "type": "shell",
      "command": "npm run startDB",
      "options": {
        "cwd": "${workspaceFolder}/server"
      }
    },
    {
      "label": "stop DB",
      "type": "shell",
      "command": "npm run stopDB",
      "options": {
        "cwd": "${workspaceFolder}/server"
      }
    },
    {
      "label": "start dev server",
      "type": "shell",
      "command": "npm run dev",
      "dependsOn": ["start DB"],
      "options": {
        "cwd": "${workspaceFolder}/server"
      }
    }
  ]
}
